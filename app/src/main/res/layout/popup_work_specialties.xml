<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@null"
    tools:context=".Views.CreateUserProfileActivity_Three">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_icon_circleadd_orange_shadow"/>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:verticalScrollbarPosition="right"
        android:fadeScrollbars="false"
        android:background="@drawable/border_blue_round"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@null"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:gravity="center|left"
                android:text="Test"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/BIG_Blue"/>

            <TextView
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:gravity="center|left"
                android:background="@drawable/btn_blue"
                android:text="Test"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/BIG_White" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>