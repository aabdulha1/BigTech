<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Views.CreateUserProfileActivity_Three">

    <!-- Toolbar Object -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/Toolbar_Main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/BIG_White"
        android:elevation="4dp"
        android:theme="@style/AppBarTheme"
        >

        <!-- Create Profile Text -->
        <TextView
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:layout_gravity="left"
            android:text="Create Profile"
            android:textColor="@color/BIG_Orange"
            android:textSize="28sp"
            android:textStyle="bold"
            />

        <!-- Logo Image -->
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="75dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_icon_biglogo"
            />

    </android.support.v7.widget.Toolbar>

    <!-- Account Type Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:text="@string/Lbl_AccountType"
        android:paddingLeft="15dp"
        android:textColor="@color/BIG_Blue"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"/>

    <!-- Account Type Dropdown -->
    <Spinner
        android:id="@+id/Spnr_AccountType"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:drawSelectorOnTop="true"
        android:entries="@array/Account_Types"
        android:background="@drawable/border_blue_round"/>

    <!-- Navigation -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginTop="66dp"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="75dp"
            android:src="@drawable/nav_arrow_left"
            android:clickable="true"
            android:onClick="ImgView_NavToCreateProfileStepOne_Click"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_icon_greenlight" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_icon_greenlight"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_icon_greenlight"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="75dp"
            android:src="@drawable/nav_arrow_right_inactive"
            />

    </LinearLayout>

</LinearLayout>